 <% @review = Review.new() %>

  <%= simple_form_for(@review) do |f| %>
    <%= f.input :dish, collection: restaurant.dishes, label: "What dish are you reviewing?", input_html: { class: "review-form" } %>

    <%= f.input :authenticity, label: "How authentic was it? 0 - 5", min: 0, max: 5, size: 5, autofocus: true, input_html: { class: "review-form" } %>

    <%= f.input :value, label: "How valuable was it? 0 - 5", min: 0, max: 5, size: 5, autofocus: true, input_html: { class: "review-form" } %>

    <%= f.input :description, label: "Add a comment", size: "30x10", input_html: { class: "review-form" } %>

      <%= hidden_field_tag 'restaurant', restaurant.id %>
  <%= f.submit %>
<% end %>

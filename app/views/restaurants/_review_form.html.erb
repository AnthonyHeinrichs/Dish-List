 <div class="container">
  <div class="row">
    <div class="col-xs-4">
    <% @review = Review.new() %>
      <%= simple_form_for(@review) do |f| %>
        <% if restaurant.dishes.present? %>
          <%= f.input :dish, collection: restaurant.dishes, label: "What dish are you reviewing?", input_html: { class: "review-form-drop", required: true } %>
        <% end %>
        <%= f.input :authenticity, label: "How authentic was it?", collection: 1..5, class: "review-form-description" %>
        <%= f.input :value, label: "How valuable was it?", collection: 1..5, class: "review-form-description" %>
        <%= f.input :description, label: "Add a comment", size: "30x10", class: "review-form-description", as: :text %>
          <%= hidden_field_tag 'restaurant', restaurant.id %>
      <%= f.submit input_html: { class: " btn review-form-button" } %>
    <% end %>
    </div>
  </div>
</div>

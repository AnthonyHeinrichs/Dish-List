<!-- NAVIGATION -->
    <nav class="navbar navbar-expand-lg ">
        <div class="container-fluid">
            <%= link_to "/", class: "banner-logo" do %>
                <%= image_tag "Logo.png" %>
            <% end %>
            <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            More
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
                            <% if user_signed_in? %>
                            <li><%= link_to "Home", "#", class: "dropdown-item" %></li>
                            <li><%= link_to "Messages", "#", class: "dropdown-item" %></li>
                            <li><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
                            <% else %>
                            <li><%= link_to "Login", new_user_session_path, class: "dropdown-item" %></li>
                            <% end %>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
